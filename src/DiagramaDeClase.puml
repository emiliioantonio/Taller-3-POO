@startuml

    interface Sistema {
      menu()
      cargarCanciones()
      guardarCanciones()
      mostrarPorGenero()
      registrarCancion()
      recomendarCancion()
      darlike()
      rankingCanciones()
      rankingGeneros()
      rankingArtistas()
    }

    class SistemaImpl {
      - rutaCsv : String
      - canciones : List<Cancion>
      - sc : Scanner
      - lector : LectorArchivos
      + SistemaImpl()
      + menu()
      + cargarCanciones()
      + guardarCanciones()
      + mostrarPorGenero()
      + registrarCancion()
      + recomendarCancion()
      + darlike()
      + rankingCanciones()
      + rankingGeneros()
      + rankingArtistas()
    }

    class LectorArchivos {
      + cargarCanciones(rutaCsv : String) : List<Cancion>
      + guardarCanciones(rutaCsv : String, canciones : List<Cancion>) : void
    }

    class Cancion {
      - nombre : String
      - artista : String
      - artista2 : String
      - genero : Genero
      - likes : int
      + getNombre() : String
      + getArtista() : String
      + getArtista2() : String
      + getGenero() : Genero
      + getLikes() : int
      + setLikes(likes : int)
      + toString()
      + toCSVLine()
    }

    enum Genero {
      ROCK
      POP
      RAP
      REGGAETON
      ELECTRONICA
      METAL
      TRAP
      OTRO
      + fromString(texto : String) : Genero
    }



    SistemaImpl ..|> Sistema
    SistemaImpl --> LectorArchivos : usa
    SistemaImpl --> Cancion : gestiona

    LectorArchivos --> Cancion : crea
    LectorArchivos --> Genero : usa

    Cancion --> Genero : tiene

    @enduml

}



